<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="display_4_text_size">112sp</dimen>
    <dimen name="display_3_text_size">56sp</dimen>
    <dimen name="display_2_text_size">45sp</dimen>
    <dimen name="display_1_text_size">34sp</dimen>
    <dimen name="headline_text_size">24sp</dimen>
    <dimen name="title_text_size">20sp</dimen>
    <dimen name="subheading_text_size">18sp</dimen>
    <dimen name="body_2_text_size">14sp</dimen>
    <dimen name="body_1_text_size">14sp</dimen>
    <dimen name="caption_text_size">13sp</dimen>
    <dimen name="small_caption_text_size">10sp</dimen>
    <dimen name="button_text_size">16sp</dimen>

    <style name="Regular">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Light">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Regular.Display4">
        <item name="android:textSize">@dimen/display_4_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Regular.Display3">
        <item name="android:textSize">@dimen/display_3_text_size</item>
    </style>

    <style name="Regular.Display2">
        <item name="android:textSize">@dimen/display_2_text_size</item>
    </style>

    <style name="Regular.Display1">
        <item name="android:textSize">@dimen/display_1_text_size</item>
    </style>

    <style name="Regular.Subheading">
        <item name="android:textSize">@dimen/subheading_text_size</item>
    </style>

    <style name="Medium.Subheading">
        <item name="android:textSize">@dimen/subheading_text_size</item>
    </style>

    <style name="Medium.Body2">
        <item name="android:textSize">@dimen/body_2_text_size</item>
    </style>

    <style name="Light.Body2">
        <item name="android:textSize">@dimen/body_1_text_size</item>
    </style>

    <style name="Regular.Body2">
        <item name="android:textSize">@dimen/body_1_text_size</item>
    </style>

    <style name="Regular.Caption">
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <style name="Light.Caption">
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <style name="Regular.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>